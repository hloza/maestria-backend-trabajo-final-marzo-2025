{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@models/*": ["./src/core/models/*"],
      "@core/*": ["./src/core/*"],
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
